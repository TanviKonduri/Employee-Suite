        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
    // Query for existing leave requests for the same user
    var gr = new GlideRecord('x_1210077_employ_0_leave_request');
    gr.addQuery('number', current.number);
    gr.query();

    if (gr.next()) {
        // Set the g_scratchpad with the leave details
        g_scratchpad.total_leaves = gr.total_leaves;
        g_scratchpad.taken_leaves = gr.taken;
        g_scratchpad.balance = gr.balance;
    } else {
        // Default values if no previous leave request exists
        g_scratchpad.total_leaves = 30;
        g_scratchpad.taken_leaves = 0;
        g_scratchpad.balance = 0;
    }
})(current, previous);
